<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_delivery_slip_extend" inherit_id="stock.report_delivery_document">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page">
                    <div class="row" name="customer_address">
                        <div class="col-xs-4 pull-right">
                            <div>
                                <span><strong>Project Location:</strong></span>
                            </div>

                             <span t-field="o.location_dest_id.name"/>
                            <!-- <div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
                                <div t-field="o.move_lines[0].partner_id"
                                   t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True}'/>
                            </div>
                            <div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">
                                <div t-field="o.partner_id"
                                   t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True}'/>
                            </div> -->
                        </div>
                    </div>
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th t-if="o.origin"><strong>Order (Origin)</strong></th>
                                <th name="td_sched_date_h">
                                    <strong>Date</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td t-if="o.origin">
                                    <span t-field="o.origin"/>
                                </td>
                                <td name="td_sched_date">
                                   <t t-if="o.state == 'done'">
                                        <span t-field="o.date_done"/>
                                   </t>
                                   <t t-if="o.state != 'done'">
                                        <span t-field="o.scheduled_date"/>
                                   </t>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="o.state!='done'">
                        <thead>
                            <tr>
                                <th><strong>Product</strong></th>
                                <th><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td><span t-field="move.product_id"/></td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed mt48" t-if="o.move_line_ids and o.state=='done'">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_production_lot"/>
                        <thead>
                            <tr>
                                <th><strong>Product</strong></th>
                                <th name="lot_serial" t-if="has_serial_number">
                                    Lot/Serial Number
                                </th>
                                <th class="text-center"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="o.picking_type_code == 'outgoing'">
                                        <span t-field="move_line.product_id.sudo().description_pickingout"/>
                                    </p>
                                    <p t-if="o.picking_type_code == 'incoming'">
                                        <span t-field="move_line.product_id.sudo().description_pickingin"/>
                                    </p>
                                </td>
                                <t t-if="has_serial_number">
                                   <td>
                                        <table width="100%">
                                            <tr>
                                                <td>
                                                     <span t-field="move_line.lot_id"/>
                                                     <t t-if="not move_line.lot_id">
                                                         <span t-field="move_line.lot_name"/>
                                                     </t>
                                                 </td>
                                                 <td name="lot_qty">
                                                     <t t-if="move_line.product_qty"> 
                                                        <span t-field="move_line.product_qty"/>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
                                  </td>
                                </t>
                                <td class="text-center">
                                    <span t-field="move_line.qty_done"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p t-if="o.backorder_id">
                        This shipment is a backorder of <t t-esc="o.backorder_id.name"/>.
                    </p>
                    <p>
                        <t t-if="o.search([('backorder_id', '=', o.id), ('state', 'not in', ['cancel', 'done'])])">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>

                
                    <div class="row">
                        <div class="col-xs-4 text-center">
                            <span>_________________________</span><br/>
                            <span>RELEASED BY</span>
                        </div>
                        <div class="col-xs-4">
                            <br/>
                        </div>
                        <div class="col-xs-4 text-center">
                            <span>_________________________</span><br/>
                            <span>RECEIVED BY</span>
                        </div>
                    </div>

                </div>
            </xpath>
        </template>

        <!-- START KONGKRETO DR STP -->
        <template id="kongkreto_new_dr_stp_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="ndm_ibas.external_layout_ndm_delivery_stp">
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                    <!-- <div class="page" t-attf-style="background-image:url('/asiaglobal/static/src/img/bill.PNG');  no-repeat; background-size: cover;"> -->
                    <div class="page" style="font-size:25px">
                        <span t-field="o.scheduled_date" style="top: 10mm;left: 300mm;position:absolute;width:100%;"/>
                        <!-- <span t-esc="datetime.datetime.strptime(o.scheduled_date, '%Y-%m-%d %H:%M:%S').strftime('%m/%d/%Y')" /> -->

                        <!-- SECTION 1 -->
                        <div style="top: 15mm;left: 42mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <span t-field="o.partner_id.name"/>
                        </div>
                        <div style="top: 24mm;left: 45mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- STRUCTURE -->
                            <span t-field="o.project_name"/>
                        </div>
                        <div style="top: 33mm;left: 45mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <span t-field="o.partner_id.street"/><span t-field="o.partner_id.street2"/><span t-field="o.partner_id.city"/>
                        </div>
                        <div style="top: 42mm;left: 45mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- TM NO -->
                            <span t-field="o.plate_no"/>
                        </div>

                        <div style="top: 51mm;left: 45mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- DRIVER -->
                            <span t-field="o.driver_name"/>
                        </div>

                        <div style="top: 60mm;left: 45mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- TIME OUT -->
                            <span t-field="o.timeout_p"/>
                        </div>

                        <!-- SECTION 2 -->
                        <div style="top: 15mm;left: 213mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <span t-field="o.name"/>
                        </div>

                        <div style="top: 24mm;left: 212mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- VOLUME -->
                            <span t-field="o.volume"/>
                        </div>

                        <div style="top: 24mm;left: 292mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- ACC. VOLUME -->
                            <span t-field="o.acc_vol"/>
                        </div>

                        <div style="top: 33mm;left: 212mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- STRENGTH -->
                            <span t-field="o.strength"/>
                        </div>

                        <div style="top: 33mm;left: 295mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- AGGREGATE -->
                            <span t-field="o.aggregate"/>
                        </div>

                        <div style="top: 42mm;left: 210mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- SLUMP -->
                            <span t-field="o.slump"/>
                        </div>

                        <div style="top: 51mm;left: 212mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- GROSS WT. -->
                            <span t-field="o.gross_weight"/>
                        </div>

                        <div style="top: 60mm;left: 212mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- TARE WT. -->
                            <span t-field="o.tare_wt"/>
                        </div>

                        <div style="top: 69mm;left: 210mm;position:absolute;width:100%;padding-top:0.5em;padding-bottom:0.5em;">
                            <!-- NET WT. -->
                            <span t-field="o.net_wt"/>
                        </div>
                        
                        
                    </div>
                </t>
            </xpath>
        </template>

        <template id="kongkreto_new_dr_stp">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="ndm_ibas.kongkreto_new_dr_stp_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <!-- END KONGKRETO DR STP -->

    </data>
</odoo>
