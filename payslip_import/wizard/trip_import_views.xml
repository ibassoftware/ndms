<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_trip_import_form" model="ir.ui.view">
        <field name="name">trip.import.form</field>
        <field name="model">trip.import</field>
        <field name="arch" type="xml">
            <form string="Trips Import">
                <group>
                    <field name="file"/>
                </group>
                <footer>
                    <button string='Import' name="trip_import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>
</odoo>
